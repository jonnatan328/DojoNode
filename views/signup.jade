extends ./layout.jade
block contenido
	div(class="col-md-8 remove-float center-block big-top-space")
		form(action="/users", method="POST" class="form-group")
			div(class="form-group")
				label(for="email") Email
				input(type="text", name="email", placeholder="E-mail", id="email" class="form-control")
			div
				label(for="password") Contraseña
				input(type="password", name="password", placeholder="Contraseña", id="password" class="form-control")
			div
				label(for="password") Confirma tu contraseña
				input(type="password", name="password_confirmation", placeholder="Confima contraseña", id="password" class="form-control")
			div
				label(for="username") Username
				input(type="text", name="username", placeholder="Nombre de usuario", id="username" class="form-control")
			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit", value="iniciar sesión" class="btn btn-info")
				div(class="col-xs-12 col-sm-6 text-right")
					a(href="/login") Ya tengo una cuenta